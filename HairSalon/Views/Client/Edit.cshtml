@{
  Layout = "_Layout";
}

<div class="container">
<div class="jumbotron">
<h1>Edit details</h1>
</div>
<div class="menu">
<hr>

<h2>Edit client: @Model["client"].GetName()</h2>

<form action="/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()" method="post">
  <label for="newName">Name:</label>
  <input type="text" name="newName" value="@Model["client"].GetName()">

  <label for="newPhone">Phone:</label>
  <input type="number" name="newPhone" value="@Model["client"].GetPhone()">

  <button type="submit" class="btn btn-warning">Edit</button>
</form>

<form action='/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()' method='get'>
<button type="submit" class="btn btn-info">Return back</button>
</form>
</div>
</div>
